{
  "name": "simple-ui",
  "private": false,
  "version": "0.0.0",
  "description": "",
  "main": "dist/cjs/components/index.cjs",
  "module": "dist/es/components/index.mjs",
  "types": "types/components.d.ts",
  "exports": {
    ".": {
      "require": "./dist/cjs/components/index.cjs",
      "import": "./dist/es/components/index.mjs",
      "types": "./dist/es/components/index.d.ts"
    },
    "./es/*": {
      "import": "./dist/es/*/index.mjs",
      "types": "./dist/es/*/index.d.ts"
    },
    "./cjs/*": {
      "require": "./dist/cjs/*/index.cjs",
      "types": "./dist/cjs/*/index.d.ts"
    }
  },
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "node --loader ts-node/esm ./packages/build/vite.config.ts",
    "test": "vitest",
    "test:cm": "vitest ./packages/components/src/**/__tests__/*.test.ts",
    "test:use": "vitest ./packages/use/src/**/__tests__/*.test.ts",
    "test:dir": "vitest ./packages/directives/src/**/__tests__/*.test.ts",
    "test:cg": "vitest --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@types/node": "^20.12.5",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "@vitejs/plugin-vue": "^4.6.2",
    "@vitest/coverage-v8": "^0.33.0",
    "@vue/runtime-core": "^3.3.4",
    "@vue/test-utils": "^2.4.1",
    "@vueuse/core": "^10.9.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-vue": "^9.15.1",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "sass": "^1.64.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.1.6",
    "vite": "^4.4.6",
    "vite-plugin-dts": "^3.3.1",
    "vitepress": "1.0.2",
    "vitest": "^1.5.0",
    "vue": "^3.4.3",
    "vue-router": "^4.2.5",
    "vue-tsc": "^2.0.13"
  }
}
